{
  "mcpServers": {
    "Playwright": {
      "command": "bunx @playwright/mcp@latest",
      "env": {},
      "args": []
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": [
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "ESLint": {
			"type": "stdio",
			"command": "bunx",
			"args": ["@eslint/mcp@latest"]
		},
    "Context7": {
      "command": "bunx",
      "args": ["@upstash/context7-mcp"]
    },
    "codex": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "-y",
        "codex",
        "mcp"
      ],
      "env": {}
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false"
      ],
      "env": {}
    }
  }
}