{
  "mcpServers": {
    "Playwright": {
      "command": "bunx @playwright/mcp@latest",
      "env": {},
      "args": []
    },
    "Context7": {
      "url": "https://mcp.context7.com/mcp",
      "headers": {}
    },
    "codex": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "-y",
        "codex",
        "mcp"
      ],
      "env": {}
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false"
      ],
      "env": {}
    }
  }
}